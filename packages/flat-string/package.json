{
  "name": "@alwatr/flat-string",
  "version": "1.0.0",
  "description": "The `flat-string` function Flattens the underlying C structures of a concatenated JavaScript string.",
  "keywords": [
    "string",
    "flat",
    "optimize",
    "concat",
    "concatenation",
    "util",
    "typescript",
    "esm",
    "alwatr"
  ],
  "main": "main.js",
  "type": "module",
  "types": "main.d.ts",
  "author": "S. Ali Mihandoost <ali.mihandoost@gmail.com>",
  "license": "MIT",
  "files": [
    "**/*.{d.ts.map,d.ts,js.map,js,html,md}"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alwatr/nanolib",
    "directory": "packages/flat-string"
  },
  "homepage": "https://github.com/Alwatr/nanolib/tree/next/packages/flat-string#readme",
  "bugs": {
    "url": "https://github.com/Alwatr/nanolib/issues"
  },
  "scripts": {
    "b": "yarn run build",
    "w": "yarn run watch",
    "c": "yarn run clean",
    "cb": "yarn run clean && yarn run build",
    "d": "yarn run build && ALWATR_DEBUG=1 yarn node",
    "build": "yarn run build:ts & yarn run build:es",
    "build:es": "yarn node ./esbuild.mjs",
    "build:ts": "tsc --build",
    "watch": "run-p -l 'watch:*'",
    "watch:es": "yarn run build:es --watch",
    "watch:ts": "yarn run build:ts --watch --preserveWatchOutput",
    "clean": "rm -rfv *.js *.d.ts *.d.ts.map *.js.map .tsbuildinfo"
  },
  "devDependencies": {
    "@alwatr/tsconfig-base": "workspace:^",
    "typescript": "^5.3.3"
  },
  "tsconfig": {
    "extends": "@alwatr/tsconfig-base",
    "compilerOptions": {
      "composite": true,
      "tsBuildInfoFile": ".tsbuildinfo",
      "rootDir": "src",
      "outDir": "."
    },
    "include": [
      "src/**/*.ts"
    ]
  }
}
